{% extends 'mailer/base_email.html.twig' %}

{% block title %}{{ 'email.welcome.subject'|trans }}{% endblock %}

{% block body %}
    <div class="header">
        <h1>{{ 'email.welcome.subject'|trans }}</h1>
    </div>
    
    <p style="margin-top: 20px;">{{ 'mailer.header.greet'|trans }}</p>
    
    <p>{{ 'registration.success'|trans }}</p>
    
    <div class="verification-box" style="background-color: #f5f5f5; padding: 20px; border-radius: 8px; margin: 20px 0; text-align: center;">
        <p style="margin-bottom: 20px;">{{ 'verification.email_confirm'|trans }}</p>
        
        <a href="{{ confirmUrl }}" style="background-color: #ff6b00; color: white; padding: 12px 24px; text-decoration: none; border-radius: 4px; display: inline-block; font-weight: bold;">
            {{ 'verification.button'|trans }}
        </a>
    </div>
    
    <p>{{ 'verification.link_alternative'|trans }}</p>
    <p style="word-break: break-all; color: #0066cc;">{{ dto.confirmUrl }}</p>
    
    <p>{{ 'verification.ignore'|trans }}</p>
    
    <div class="footer">
        <p>{{ 'mailer.footer.regards'|trans }}</p>
        <p>Email: info@choven.by | {{ 'mailer.footer.phone'|trans }}: +375 29 705-75-85</p>
    </div>
{% endblock %}