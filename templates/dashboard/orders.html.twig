{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.orders.title'|trans }}{% endblock %}

{% block head %}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('styles/dashboard/orders.css') }}">
    {% endblock %}
{% endblock %}

{% block body %}
    <section class="admin-panel">
        <div class="container">
            <a href="{{ path('app_admin_dashboard') }}" class="back-to-dashboard">
                <i class="fas fa-arrow-left"></i>{{ 'admin.back_to_dashboard'|trans }}
            </a>
            
            <h1 class="admin-title">{{ 'admin.orders.title'|trans }}</h1>
            
            {% if orders|length > 0 %}
                <div class="orders-grid">
                    {% for order in orders %}
                        <div class="order-card">
                            <div class="order-header">
                                <div class="order-id">
                                    {{ 'admin.orders.order'|trans }} #{{ order.id }}
                                </div>
                                <div class="order-date">
                                    {{ order.startDate|date('d.m.Y') }}
                                </div>
                            </div>
                            
                            <div class="order-body">
                                <div class="order-detail">
                                    <div class="detail-icon">
                                        <i class="fas fa-envelope"></i>
                                    </div>
                                    <div class="detail-content">
                                        <div class="detail-label">{{ 'admin.orders.table.email'|trans }}</div>
                                        <div class="detail-value">{{ order.email }}</div>
                                    </div>
                                </div>
                                
                                <div class="order-detail">
                                    <div class="detail-icon">
                                        <i class="fas fa-water"></i>
                                    </div>
                                    <div class="detail-content">
                                        <div class="detail-label">{{ 'admin.orders.table.river'|trans }}</div>
                                        <div class="detail-value">
                                            <span class="badge badge-river">
                                                {{ ('river.' ~ order.river.value)|trans }}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="order-detail">
                                    <div class="detail-icon">
                                        <i class="fas fa-box"></i>
                                    </div>
                                    <div class="detail-content">
                                        <div class="detail-label">{{ 'admin.orders.table.package'|trans }}</div>
                                        <div class="detail-value">
                                            <span class="badge badge-package">
                                                {{ order.package.getLabel()|trans }}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="order-detail">
                                    <div class="detail-icon">
                                        <i class="fas fa-users"></i>
                                    </div>
                                    <div class="detail-content">
                                        <div class="detail-label">{{ 'admin.orders.table.people_count'|trans }}</div>
                                        <div class="detail-value">{{ order.amountOfPeople }} {{ 'admin.orders.people'|trans }}</div>
                                    </div>
                                </div>
                                
                                <div class="order-detail">
                                    <div class="detail-icon">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <div class="detail-content">
                                        <div class="detail-label">{{ 'admin.orders.table.duration'|trans }}</div>
                                        <div class="detail-value">{{ order.durationDays }} {{ 'admin.orders.days'|trans }}</div>
                                    </div>
                                </div>
                                
                                <div class="order-detail">
                                    <div class="detail-icon">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div class="detail-content">
                                        <div class="detail-label">{{ 'admin.orders.table.user'|trans }}</div>
                                        <div class="detail-value">
                                            {% if order.user %}
                                                <span class="badge badge-user-registered">
                                                    {{ 'admin.orders.registered_user'|trans }}
                                                </span>
                                            {% else %}
                                                <span class="badge badge-user-guest">
                                                    {{ 'admin.orders.guest'|trans }}
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                
                                {% if order.description %}
                                    <div class="description-section">
                                        <div class="detail-label">{{ 'admin.orders.description'|trans }}:</div>
                                        <div class="description-content">
                                            {{ order.description|nl2br }}
                                        </div>
                                    </div>
                                {% else %}
                                    <div class="description-section">
                                        <div class="no-description">
                                            {{ 'admin.orders.no_description'|trans }}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                
                {% if totalPages > 1 %}
                    <div class="pagination">
                        {% if currentPage > 1 %}
                            <a href="{{ path('app_admin_orders', {page: currentPage - 1}) }}">
                                <i class="fas fa-chevron-left"></i> {{ 'admin.pagination.previous'|trans }}
                            </a>
                        {% endif %}
                        
                        {% for page in 1..totalPages %}
                            {% if page == currentPage %}
                                <span class="active">{{ page }}</span>
                            {% else %}
                                <a href="{{ path('app_admin_orders', {page: page}) }}">{{ page }}</a>
                            {% endif %}
                        {% endfor %}
                        
                        {% if currentPage < totalPages %}
                            <a href="{{ path('app_admin_orders', {page: currentPage + 1}) }}">
                                {{ 'admin.pagination.next'|trans }} <i class="fas fa-chevron-right"></i>
                            </a>
                        {% endif %}
                    </div>
                {% endif %}
            {% else %}
                <div class="alert alert-info">
                    <i class="fas fa-info-circle" style="margin-right: 10px;"></i>
                    {{ 'admin.orders.no_orders'|trans }}
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}