{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}

{% block head %}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('styles/form.css') }}">
    {% endblock %}
{% endblock %}

{% block body %}
<section class="form-section">
    <div class="container">
        <h1 class="section-title">{{ 'login.title'|trans }}</h1>
        
        <div class="form-container">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="form-group">
                    <label for="inputEmail">{{ 'login.form.email'|trans }}</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
                
                <div class="form-group">
                    <label for="inputPassword">{{ 'login.form.password'|trans }}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>
                
                <div class="form-group form-check">
                    <input type="checkbox" id="remember_me" name="_remember_me" class="form-check-input">
                    <label class="form-check-label" for="remember_me">{{ 'login.form.remember_me'|trans }}</label>
                </div>

                <input type="hidden" name="_csrf_token" value="authenticate">

                <div class="form-group">
                    <button class="btn btn-primary" type="submit">{{ 'login.form.sign_in'|trans }}</button>
                </div>
                
                <div class="mt-3 text-center">
                    <p>{{ 'login.form.no_account'|trans }} <a href="{{ path('app_register') }}">{{ 'login.form.register'|trans }}</a></p>
                </div>
            </form>
        </div>
    </div>
</section>
{% endblock %}