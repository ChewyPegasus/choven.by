<div class="popup-overlay" id="popup-all_inclusive">
    <div class="popup-content">
        <button class="popup-close">&times;</button>
        <h2 class="popup-title">{{ packages.all_inclusive.name }}</h2>
        <div class="popup-description">
            <p>{{ packages.all_inclusive.description }}</p>
        </div>
        <div class="popup-features">
            <h3>{{ 'package.features.included'|trans }}</h3>
            <ul class="feature-list">
                {% for feature in packages.all_inclusive.features %}
                    <li class="feature-item">{{ feature }}</li>
                {% endfor %}
            </ul>
        </div>
        <div class="popup-footer">
            <a href="{{ path('app_order_new', {'type': 'all_inclusive'}) }}" class="btn-book-now">{{ 'package.book_now'|trans }}</a>
        </div>
    </div>
</div>