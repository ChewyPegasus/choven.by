<div class="popup-overlay" id="popup-minimum">
    <div class="popup-content">
        <button class="popup-close">&times;</button>
        <h2 class="popup-title">{{ 'package.minimum.title'|trans }}</h2>
        <div class="popup-description">
            <p>{{ 'package.minimum.description'|trans }}</p>
        </div>
        <div class="popup-features">
            <h3>{{ 'package.features.included'|trans }}</h3>
            <ul class="feature-list">
                {% for feature in ['package.minimum.features.equipment', 'package.minimum.features.instructor'] %}
                    <li class="feature-item">{{ feature|trans }}</li>
                {% endfor %}
            </ul>
        </div>
        <div class="popup-footer">
            <a href="{{ path('app_order_new', {'type': 'minimum'}) }}" class="btn-book-now">{{ 'package.book_now'|trans }}</a>
        </div>
    </div>
</div>