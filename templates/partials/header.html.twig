<header class="site-header">
    <div class="container">
        <div class="header-content">
            <div class="logo">
                <a href="{{ path('app_main') }}">
                    <span class="logo-text">{{ 'name'|trans }}</span>
                </a>
            </div>
            
            <div class="header-right">
                <nav class="main-nav">
                    <ul>
                        <li><a href="{{ path('app_main') }}">{{ 'menu.home'|trans }}</a></li>
                        <li><a href="{{ path('app_info') }}">{{ 'menu.about_rafting'|trans }}</a></li>
                        <li><a href="{{ path('app_about') }}">{{ 'menu.about_us'|trans }}</a></li>
                        <li><a href="{{ path('app_order_new') }}" class="btn-outline">{{ 'menu.book'|trans }}</a></li>
                    </ul>
                </nav>

                <div class="language-switcher-container">
                    <div class="language-switcher">
                        <a href="{{ path('app_change_locale', {'locale': 'ru'}) }}" class="{{ app.request.locale == 'ru' ? 'active' : '' }}">RU</a>
                        <a href="{{ path('app_change_locale', {'locale': 'be'}) }}" class="{{ app.request.locale == 'be' ? 'active' : '' }}">BE</a>
                        <a href="{{ path('app_change_locale', {'locale': 'en'}) }}" class="{{ app.request.locale == 'en' ? 'active' : '' }}">EN</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>