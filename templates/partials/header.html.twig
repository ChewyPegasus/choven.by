<header class="site-header">
    <div class="container">
        <div class="header-content">
            <div class="logo">
                <a href="{{ path('app_main') }}">
                    <span class="logo-text">{{ 'name'|trans }}</span>
                </a>
            </div>
            
            <div class="header-right">
                <nav class="main-nav">
                    <ul>
                        {% if app.user and app.user.isAdmin %}
                            <li><a href="{{ path('app_admin_dashboard') }}">{{ 'navigation.admin'|trans }}</a></li>
                        {% endif %}
                        <li><a href="{{ path('app_main') }}">{{ 'menu.home'|trans }}</a></li>
                        <li><a href="{{ path('app_info') }}">{{ 'menu.about_rafting'|trans }}</a></li>
                        <li><a href="{{ path('app_about') }}">{{ 'menu.about_us'|trans }}</a></li>
                        <li><a href="{{ path('app_order_new') }}" class="btn-outline">{{ 'menu.book'|trans }}</a></li>
                    </ul>
                </nav>

                <div class="user-controls">
                    <div class="language-switcher">
                        <a href="{{ path('app_change_locale', {'locale': 'ru'}) }}" class="{{ app.request.locale == 'ru' ? 'active' : '' }}">RU</a>
                        <a href="{{ path('app_change_locale', {'locale': 'be'}) }}" class="{{ app.request.locale == 'be' ? 'active' : '' }}">BY</a>
                        <a href="{{ path('app_change_locale', {'locale': 'en'}) }}" class="{{ app.request.locale == 'en' ? 'active' : '' }}">EN</a>
                    </div>
                    
                    <div class="auth-controls">
                        {% if app.user %}
                            <div class="user-dropdown">
                                <button class="user-btn">
                                    <i class="fas fa-user-circle"></i>
                                </button>
                                <div class="dropdown-content">
                                    <span class="user-email">{{ app.user.email }}</span>
                                    <a href="{{ path('app_profile_orders') }}">
                                        <i class="fas fa-list me-2"></i>{{ 'profile.orders.title'|trans }}
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a href="{{ path('app_logout') }}">
                                        <i class="fas fa-sign-out-alt me-2"></i>{{ 'menu.logout'|trans }}
                                    </a>
                                </div>
                            </div>
                        {% else %}
                            <div class="guest-dropdown">
                                <button class="guest-btn" title="{{ 'menu.auth'|trans }}">
                                    <i class="fas fa-question-circle"></i>
                                </button>
                                <div class="dropdown-content">
                                    <a href="{{ path('app_login') }}">
                                        <i class="fas fa-sign-in-alt"></i> {{ 'menu.login'|trans }}
                                    </a>
                                    <a href="{{ path('app_register') }}">
                                        <i class="fas fa-user-plus"></i> {{ 'menu.register'|trans }}
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>